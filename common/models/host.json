{
  "name": "host",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "email": {
      "type": "string",
      "required": true,
      "index": {
        "unique": true
      }
    },
    "phoneNumber": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "avatar": {
      "type": "string",
      "required": true
    },
    "IDNumber": {
      "type": "string",
      "required": true
    },
    "IDPhoto1": {
      "type": "string",
      "required": true
    },
    "IDPhoto2": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "agency": {
      "type": "belongsTo",
      "model": "agency",
      "foreignKey": "agencyId"
    },
    "wallets": {
      "type": "hasOne",
      "model": "wallet",
      "foreignKey": "ownerId"
    },
    "withdraws": {
      "type": "hasMany",
      "model": "withdraw",
      "foreignKey": "ownerId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}